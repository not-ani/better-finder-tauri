{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Better Finder",
  "version": "0.0.6",
  "identifier": "com.better-finder.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Better Finder",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo-finder-32x32.png",
      "icons/logo-128x128.png"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlCNEE5QzA0NzdBMEM3NDYKUldSR3g2QjNCSnhLbStKbGJtUEI1bmhkMm5LeHdmR0w3WmZRemhZK3hCUUloR0EyUmZjcFRFNUkK",
      "endpoints": [
        "https://github.com/not-ani/better-finder-tauri/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}