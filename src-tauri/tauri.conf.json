{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Better Finder",
  "version": "0.1.0",
  "identifier": "com.better-finder.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Better Finder",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      
      "icons/logo-finder-32x32.png",
      "icons/logo-128x128.png"
    ]
  }
}
